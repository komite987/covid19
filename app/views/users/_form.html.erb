<%= render 'errors', obj: @user %>

  <%= form_with(model: @user, local:true) do |f| %>
<div class="form-group row">
  <div  class="col-sm-2 col-form-label text-right">
    <%= f.label :name %>
  </div>
  <div class="col-sm-8">
  <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
</div>
</div>

<div class="form-group row">
  <div  class="col-sm-2 col-form-label text-right">
  <%= f.label :email %>
  </div>
  <div class="col-sm-8">
  <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
</div>
</div>

<div class="form-group row">
  <div  class="col-sm-2 col-form-label text-right">
  <%= f.label :password %>
  </div>
  <div class="col-sm-8">
  <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
</div>
</div>

<div class="form-group row">
  <div  class="col-sm-2 col-form-label text-right">
  <%= f.label :password_confirmation %>
  </div>
  <div class="col-sm-8">
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
</div>
</div>


<div class="form-group row">
  <div class="offset-sm-2 col-sm-10">
    <%= f.submit(@user.new_record? ? 'Add Uuser' : 'Update user account', class: 'btn btn-primary') %>
  </div>
</div>
<% end %>
