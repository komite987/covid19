<script>
    Highcharts.chart('container', {

        title: {
            text: 'Linear statistics'
        },

        xAxis: {
            type: 'datetime',
            tickInterval: 604800000,
            labels: {
              style: {
                fontSize: '12px'
              }
            }
        },

        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle'
        },

        plotOptions: {
            series: {
                pointStart: Date.UTC(<%= chartDataDate(removeColony(@response)) %>),
                pointInterval: 24 * 3600 * 1000 // one day
            }
        },

        series: [{
            name: 'Confirmed',
            data: <%= chartDataTotal(removeColony(@response), 'Confirmed') %>
        }, {
            name: 'Deaths',
            data: <%= chartDataTotal(removeColony(@response), 'Deaths') %>
        }, {
            name: 'Recovered',
            data: <%= chartDataTotal(removeColony(@response), 'Recovered') %>
        }],

        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
                chartOptions: {
                    legend: {
                        layout: 'horizontal',
                        align: 'center',
                        verticalAlign: 'bottom'
                    }
                }
            }]
        }

    });

    Highcharts.chart('container2', {

        title: {
            text: 'Daily statistics'
        },

        xAxis: {
            type: 'datetime',
            tickInterval: 604800000,
            labels: {
              style: {
                fontSize: '12px'
              }
            }
        },

        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle'
        },

        plotOptions: {
            series: {
                pointStart: Date.UTC(<%= chartDataDate(removeColony(@response)) %>),
                pointInterval: 24 * 3600 * 1000 // one day
            }
        },


        series: [{
            name: 'Confirmed',
            data: <%= chartDataDaily(removeColony(@response), 'Confirmed') %>
        }, {
            name: 'Deaths',
            data: <%= chartDataDaily(removeColony(@response), 'Deaths') %>
        }, {
            name: 'Recovered',
            data: <%= chartDataDaily(removeColony(@response), 'Recovered') %>
        }],

        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
                chartOptions: {
                    legend: {
                        layout: 'horizontal',
                        align: 'center',
                        verticalAlign: 'bottom'
                    }
                }
            }]
        }

    });

</script>
