<body>
  <div class="page-wrapper bg-red p-t-180 p-b-100 font-robo">
    <div class="wrapper wrapper--w960">
      <div class="card card-2">
        <div class="card-heading"></div>
        <div class="card-body">
          <h2 class="title">Enter Your Search Info</h2>
          <%= form_tag("/search", method: "post") do %>
          <div class="input-group">
            <%= label_tag(:country, "Country Name:", class: 'mb-0') %>
            <%= text_field_tag(:country, nil , class: 'input--style-2' , list: "mylist", id: 'search-input')  %>
            <datalist id="mylist">
              <% countries_list.each do |country| %>
              <option id= 'search-option'><%= country %></option>
              <% end %>
            </datalist>

          </div>
          <div class="row">
            <div class="form-group col-md-6 pl-0">
              <%= label_tag(:start_date, "Start Date:", class: 'col-form-label') %>
              <input class="input--style-2 js-datepicker" type="date" value="2020-01-22" min="2020-01-22" name="start_date" max="<%= DateTime.yesterday.strftime('%Y-%m-%d')%>">
            </div>

            <div class="form-group col-md-6 pl-0">
              <%= label_tag(:end_date, "End Date:", class: 'col-form-label') %>
              <input class="input--style-2 js-datepicker" type="date" value="<%= DateTime.yesterday.strftime("%Y-%m-%d")%>" name="end_date" max="<%= DateTime.yesterday.strftime("%Y-%m-%d")%>">
            </div>
          </div>
          <div class="p-t-30">
            <div class="form-group col-lg-3 pl-0">
              <%= submit_tag("Search", class: 'btn btn--radius btn--green btn-outline-info btn-block', id: 'search-button') %>
            </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
